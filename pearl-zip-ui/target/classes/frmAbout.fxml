<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="449.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ntak.pearlzip.ui.pub.FrmAboutController">
    <minWidth>490.0</minWidth>
    <maxWidth>490.0</maxWidth>
    <minHeight>449.0</minHeight>
    <maxHeight>528.0</maxHeight>
    <alignment>CENTER</alignment>
   <children>
      <VBox fx:id="vbAbout" prefHeight="600.0" prefWidth="490.0" style="-fx-background-color: #ccddee; -fx-background-image: url(about-splash.png); -fx-background-repeat: no-repeat;">
         <children>
            <ImageView fx:id="imgViewAbtSplash" fitHeight="310.0" fitWidth="490.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lblAppName" alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="490.0" style="-fx-padding: 0 0 0 10" text="%about.app-name.text" />
            <Label fx:id="lblVersion" alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="490.0" style="-fx-padding: 0 0 0 10" text="%about.version.text" />
            <Label fx:id="lblCopyright" alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="490.0" style="-fx-padding: 0 0 0 10" text="%about.copyright.text" />
            <Label fx:id="lblWeblink" alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="490.0" style="-fx-padding: 0 0 0 10" text="%about.weblink.text" />
            <Label fx:id="lblGeneral" alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="490.0" style="-fx-padding: 0 0 0 10" text="%about.description.text" />
            <HBox prefHeight="65.0" prefWidth="490.0">
               <children>
                  <Button fx:id="btnLicenseInfo" mnemonicParsing="true" text="%about.btnLicenseInfo.text" translateX="10" translateY="10" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
